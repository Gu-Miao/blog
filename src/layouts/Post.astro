---
import Basic from './Basic.astro'
import ExLink from '@/components/ExLink.astro'
import { MarkdownContent } from 'astro'
import { Frontmatter } from '@/common/types'
import { formatDate } from '@/utils/utils'

interface Props {
  content: MarkdownContent<Frontmatter>
}

const { content } = Astro.props as Props
const canonicalURL = Astro.url
---

<Basic {canonicalURL} {...content}>
  <Fragment slot="head">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </Fragment>
  <div class="blog">
    <div class="container">
      <h1 id={content.title}>{content.title}</h1>
      <ul class="info">
        <li>
          作者：<ExLink href={content.author.link}>{content.author.name}</ExLink>
        </li>
        <li>创建于 {formatDate(content.createdAt)}，最后更新于 {formatDate(content.updatedAt)}</li>
        <li class="tag-container">
          标签：{content.tags.map(tag => <span class="tag">{tag}</span>)}
        </li>
        {content.serials && <li>所属系列：{content.serials}</li>}
        {content.reprint && (
          <li>
            转载自<ExLink href={content.reprint.link}>{content.reprint.description}</ExLink>
          </li>
        )}
      </ul>
      <img src={content.image} alt={content.title} />
      <slot />
    </div>
  </div>
</Basic>
<style is:global lang="less">
  .blog {
    height: 100vh;
    overflow-y: auto;
    padding: 1.5em;
    background-color: #ddd;
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 1.5em;
      line-height: 1.57;
      background-color: white;
      border-radius: 0.5em;
    }
    @media screen and (max-width: 720px) {
      & {
        padding: 0;
      }
      .container {
        @p: .75em;
        margin: 0;
        border-radius: 0;
        padding: 1.5em @p;
        & > pre {
          margin-left: -@p;
          margin-right: -@p;
          border-radius: 0;
          padding: 1.2em @p;
        }
      }
    }
    .info {
      font-size: 0.8em;
      color: #666;
    }
    .tag {
      display: inline-block;
      padding: 0.25em 0.5em;
      background-color: #32abf1;
      color: white;
      font-size: 0.85em;
      border-radius: 0.3em;
      &:not(:last-child) {
        margin-right: 0.3em;
      }
    }
    img:not(.badge) {
      display: block;
      margin: 0 auto;
      max-width: 100%;
      border-radius: 0.5em;
      &:not([width]) {
        width: 100%;
      }
    }
    img.badge {
      height: 1.5em;
    }
    ul,
    ol {
      padding-left: 1.25em;
    }
    li:not(:last-child) {
      margin-bottom: 0.4em;
    }
    pre {
      padding: 1.2em 1em;
      border-radius: 0.5em;
      &::-webkit-scrollbar-track {
        margin: 0 1.2em;
        background: inherit;
      }
    }
    blockquote {
      margin-left: 0;
      margin-right: 0;
      padding: 0.5em 1em;
      background-color: #ddd;
      border-radius: 0.5em;
    }
    code {
      font-family: 'Fira Code';
    }
    :not(pre) > code {
      padding: 0.1em 0.4em;
      border-radius: 0.3em;
      color: #b71540;
      background-color: #eee;
    }
    details {
      @p: .8em;
      @br: .5em;
      padding: @p;
      padding-bottom: 0;
      border-radius: @br;
      background-color: #eee;
      &[open] {
        padding-bottom: @p;
        summary {
          margin-bottom: @p;
          border-bottom-left-radius: 0;
          border-bottom-right-radius: 0;
          background-color: #ddd;
        }
        & > *:last-child {
          margin-bottom: 0;
        }
        :not(pre) > code {
          background-color: #ddd;
        }
      }
      summary {
        border-radius: @br;
        margin: -@p;
        margin-bottom: 0;
        padding: 0.5em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
        &:hover {
          background-color: #ddd;
        }
      }
      @media screen and (max-width: 720px) {
        @p: .5em;
        & {
          padding: @p;
          padding-bottom: 0;
          margin-left: -(@p / 1.5);
          margin-right: -(@p / 1.5);
        }
        &[open] {
          padding-bottom: @p;
          summary {
            margin-bottom: @p;
          }
        }
        summary {
          margin: -@p;
          margin-bottom: 0;
        }
        pre {
          margin-left: -@p;
          margin-right: -@p;
          border-radius: 0;
        }
      }
    }
  }
</style>
