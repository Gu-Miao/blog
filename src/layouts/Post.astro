---
import Basic from './Basic.astro'
import ExLink from '@/components/ExLink.astro'
import { Frontmatter } from '@/common/types'
import { formatDate } from '@/utils/utils'

interface Props {
  content: Frontmatter
}

const { content } = Astro.props as Props
const canonicalURL = Astro.url
---

<Basic {canonicalURL} {...content}>
  <Fragment slot="head">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </Fragment>
  <div class="blog">
    <div class="container">
      <h1 id={content.title}>{content.title}</h1>
      <ul class="info">
        <li>
          作者：<ExLink href={content.author.link}>{content.author.name}</ExLink>
        </li>
        <li>创建于 {formatDate(content.createdAt)}，最后更新于 {formatDate(content.updatedAt)}</li>
        <li>标签：{content.tags.toString()}</li>
        {content.serials && <li>所属系列：{content.serials}</li>}
        {content.reprint && (
          <li>
            转载自<ExLink href={content.reprint.link}>{content.reprint.description}</ExLink>
          </li>
        )}
      </ul>
      <img class="banner" src={content.image} alt={content.title} />
      <slot />
    </div>
  </div>
</Basic>
<style is:global lang="less">
  .blog {
    height: 100vh;
    overflow-y: auto;
    padding: 1.5em;
    background-color: #ddd;
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 1.5em;
      line-height: 1.57;
      background-color: white;
      border-radius: 0.5em;
    }
    @media screen and (max-width: 720px) {
      & {
        padding: 0;
      }
      .container {
        margin: 0;
        border-radius: 0;
      }
    }
    .info {
      font-size: 0.8em;
      color: #666;
    }
    .banner {
      display: block;
      width: 100%;
      border-radius: 0.5em;
    }
    ul,
    ol {
      padding-left: 1.25em;
    }
    li:not(:last-child) {
      margin-bottom: 0.4em;
    }
    pre {
      padding: 1.2em 1em;
      border-radius: 0.5em;
      &::-webkit-scrollbar-track {
        margin: 0 1.2em;
        background: inherit;
      }
    }
    blockquote {
      margin-left: 0;
      margin-right: 0;
      padding: 0.5em 1em;
      background-color: #ddd;
      border-radius: 0.5em;
    }
    code {
      font-family: 'Fira Code';
    }
    :not(pre) > code {
      background-color: #eee;
      padding: 0.15em 0.4em;
      border-radius: 0.3em;
    }
    summary {
      background-color: #eee;
      padding: 0.3em 0.8em;
      border-radius: 0.5em;
      cursor: pointer;
      transition: background-color 0.2s ease-in-out;
      &:hover {
        background-color: #ddd;
      }
    }
  }
</style>
