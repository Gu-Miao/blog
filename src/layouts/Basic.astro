---
import { LANGUAGE } from '@/common/constants'
import Head, { Props } from '@/components/Head.astro'

const props = Astro.props as Props
---

<html lang={LANGUAGE}>

<Head {...props} />

<style is:global lang="less">
  @size: 8px;

  ::-webkit-scrollbar {
    width: @size;
    height: @size;
  }

  ::-webkit-scrollbar-track {
    border-radius: @size;
    background: #eee;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: @size;
    background: #bbb;
  }

  :root {
    font-size: 16px;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
  }
</style>

<body>
  <slot />
</body>

</html>
